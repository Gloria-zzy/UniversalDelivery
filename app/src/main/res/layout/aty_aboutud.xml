<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="com.example.administrator.bottom.atys.AtyAboutUD">

    <LinearLayout
        android:id="@+id/title"
        style="@style/TopStatus">

        <ImageView
            android:id="@+id/iv_aboutUD_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/item_back" />

        <TextView
            style="@style/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="关于UD"
            android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:gravity="center"
                    android:paddingLeft="10sp">

                    <ImageView
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:src="@drawable/ic_logo_bo" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="6sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APP名称"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="UD"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="最低支持Android版本"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5sp"
                        android:paddingRight="15sp"
                        android:text="4.2"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最适分辨率"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="1920*1080"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="6sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="峰值内存"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="约150M"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="6sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版本"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="UD_2.7.12.180306_beta"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="开发人员"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5sp"
                        android:paddingRight="15sp"
                        android:text="Charles · Gloria · Jurhoo"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开发团队"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="UDers团队"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
