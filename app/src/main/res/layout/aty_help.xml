<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.bottom.atys.AtyHelp">

    <LinearLayout
        android:id="@+id/title"
        style="@style/TopStatus">

        <ImageView
            android:id="@+id/iv_atyHelp_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/item_back" />

        <TextView
            style="@style/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="使用指南"
            android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="下单"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击首页“取快递”按钮即可下单。"
                        android:textColor="@color/grey" />

                </LinearLayout>


                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/help_fraghome" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/sp_line_login"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:src="@drawable/help_fetch" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="下单方式"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请阅读注解，根据实际情况选择下单方式。"
                        android:textColor="@color/grey" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/sp_line_login"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="信任好友"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平台会以推送的形式通知信任好友，请确保信任好友能够收到通知。"
                        android:textColor="@color/grey" />

                </LinearLayout>


                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/help_fetch_trustfriend" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/sp_line_login"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:src="@drawable/help_code" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="订单二维码"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在约定时间内，您或您的信任好友凭订单二维码取件，UDers扫描二维码后完成订单。"
                        android:textColor="@color/grey" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/sp_line_login"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="添加好友"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在联系人界面，点击搜索框右侧的加号即可添加好友。"
                        android:textColor="@color/grey" />

                </LinearLayout>


                <ImageView
                    android:layout_width="140sp"
                    android:layout_height="50sp"
                    android:src="@drawable/help_addfriend" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/sp_line_login"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:src="@drawable/help_delete" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="删除好友"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在联系人界面，长按联系人就会跳出删除联系人的对话框。"
                        android:textColor="@color/grey" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/sp_line_login"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="申请加入UDers"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阅读协议并提交即可申请加入UD团队，为广大同学解决取件难题。审核通过后，UDers可以使用“员工通道”。"
                        android:textColor="@color/grey" />

                </LinearLayout>


                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/help_staff" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
