<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/TopStatus">

        <ImageView
            android:id="@+id/iv_atyDetails_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/item_back" />

        <TextView
            style="@style/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="订单详细信息"
            android:textColor="@color/white" />


    </LinearLayout>

    <!--<com.example.administrator.bottom.widget.RefreshLayoutyout>-->
    <!--android:id="@+id/refreshLayout_taken_orders"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/transparent">-->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:paddingLeft="10sp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="订单号  :  "
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_orderNumber"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="123456789011"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="下单时间  :  "
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_orderTime"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="2018-2-1 16:39"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="订单状态  :  "
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_orderStatus"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="派送中"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="下单方式"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_orderPattern"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5sp"
                        android:paddingRight="15sp"
                        android:text="临时下单"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_arriveAddress"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="中国UD大学东区20栋124"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="6sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货时间"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_arriveTime"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="18：30~20：30"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_atyDetails_pickPattern_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="9sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="取货方式"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_pickPattern"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5sp"
                        android:paddingRight="15sp"
                        android:text="信任好友代拿"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信任好友"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_trustFriend"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="CHARLES"
                        android:textColor="@color/blue" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_atyDetails_pickPattern_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="9sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取货方式"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="自己拿"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_atyDetails_orderPattern_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="9sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="快递点"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_pickPoint"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5sp"
                        android:paddingRight="15sp"
                        android:text="北门菜鸟驿站"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递号"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_pickNumber"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="6426"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="9sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="快递体积"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_size"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5sp"
                        android:paddingRight="15sp"
                        android:text="小"
                        android:textColor="@color/grey" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="2sp"
                    android:background="@drawable/sp_line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="备注"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_note"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10sp"
                        android:text="感谢UD的优质服务！"
                        android:textColor="@color/grey" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="9sp"
                android:paddingTop="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="派送员"
                        android:textColor="@color/text_clo" />

                    <TextView
                        android:id="@+id/tv_atyDetails_taker"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15sp"
                        android:text="暂无"
                        android:textColor="@color/grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:id="@+id/tv_atyDetails_change"
                    style="@style/min_text"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="修改取货方式"
                    android:drawableTop="@drawable/item_edit"
                    android:textColor="@color/text_clo" />

                <TextView
                    android:id="@+id/tv_atyDetails_contacttaker"
                    style="@style/min_text"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="联系派送员"
                    android:drawableTop="@drawable/item_telephone"
                    android:textColor="@color/text_clo" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_atyDetails_code"
                style="@style/default_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/item_btn"
                android:gravity="center"
                android:text="订单二维码"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
    <!--</com.example.administrator.bottom.widget.RefreshLayoutyout>-->
</LinearLayout>
