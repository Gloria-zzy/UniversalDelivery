<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_fragHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280sp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="280sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/item_home_banner" />

                <Button
                    android:id="@+id/get_btn"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="66sp"
                    android:background="@drawable/btn_fetch"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="10sp"
                android:paddingBottom="8sp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/ll_fragHome_delivering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/default_text"
                        android:textColor="@color/text_clo"
                        android:text="正在派送"/>

                    <TextView
                        android:id="@+id/tv_fragHome_delivering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="0"
                        android:textColor="#2395d5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fraghome_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/default_text"
                        android:textColor="@color/text_clo"
                        android:text="历史订单"/>

                    <TextView
                        android:id="@+id/tv_fragHome_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="0"
                        android:textColor="#2395d5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fragHome_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/default_text"
                        android:textColor="@color/text_clo"
                        android:text="异常订单"/>

                    <TextView
                        android:id="@+id/tv_fragHome_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="0"
                        android:textColor="#2395d5"/>

                </LinearLayout>

            </LinearLayout>

            <com.example.administrator.bottom.widget.MyGridView
                android:id="@+id/gv_fragHome_func"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>